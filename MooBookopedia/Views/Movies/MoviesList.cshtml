@using MooBookopedia.Models;
@model IEnumerable<Movies>

@{
    ViewData["Title"] = "List of movies";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MoviePictureURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MovieName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MovieDescription)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.MoviePictureURL" alt="@item.MovieName style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MovieName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MovieDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-clipboard">Add Note</i></a> |
                            <a class="btn btn-outline-secondary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
