@using MooBookopedia.Models;
@model IEnumerable<Books>

@{
    ViewData["Title"] = "Lista książek";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Zdjęcie
                    </th>
                    <th>
                        Nazwa książki
                    </th>
                    <th>
                        Opis
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr onclick="window.location='#/Home';">
                        <td class="align-middle">
                            <img class="border border-dark" src="@item.BookPictureURL" alt="@item.BookName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BookName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BookDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="ViewBook" asp-route-id="@item.BooksID">Zobacz więcej</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>