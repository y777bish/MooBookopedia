@using MooBookopedia.Models;
@model IEnumerable<Books>

@{
    ViewData["Title"] = "List of Books";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BookPictureURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookDescription)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="border border-dark" src="@item.BookPictureURL" alt="@item.BookName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BookName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.BookDescription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-clipboard">Add Note</i></a> |
                            <a class="btn btn-outline-secondary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>